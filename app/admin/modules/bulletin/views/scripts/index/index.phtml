    /**
     * 操作请求发送确认
     */
    function sendRequest(handle,handle_label,iconclass){
        var lock_time = '';//锁定时间
        var dialog_id = '';//对话框的ID
        var ids = [];
        var labels = [];
        var rows = $('#datagrid_result').datagrid('getSelections');
        if( rows.length == 0){
            $.messager.alert('确认请求','请选择要操作的数据','error');
            return false;
        }
        for(var i=0; i<rows.length; i++){
            ids.push(rows[i].bulletin_id);
            labels.push(rows[i].bulletin_title);
        }
        var messagerTitle = handle_label + '确认';
        var messagerBody = '你确认要' + handle_label + '以下' + rows.length + '条帐号数据吗？<br><br>' + labels.join(' , ');
        if(handle == 'lock'){
            dialog_id = 'dialog-handle-lock';
            $('#'+dialog_id).dialog({
                title: messagerTitle,
                content:messagerBody,
                closed:false
            });
        }else{
            dialog_id = 'dialog-handle';
            $('#'+dialog_id).dialog({
                title: messagerTitle,
                content:messagerBody,
                closed:false,
                iconCls:iconclass
            });
        }
        //在弹出对话框后点击确定
        $('#link_buttons_ok').click(function(){
            $("#link_buttons_ok").unbind();//删除原来的事件绑定
            $('#' + dialog_id).dialog('close');//添加新的点击绑定
            sendReqWithAjax(handle,ids);
        });
        //在调出对话框后点击取消
        $('#link_buttons_cancel').click(function(){
            $("#link_buttons_cancel").unbind();//删除原来的事件绑定
            $('#' + dialog_id).dialog('close');//添加新的点击绑定
        });
    }

    /**
     * 发送删除、锁定、解税等请求
     */
    function sendReqWithAjax(handle,ids)
    {
        if(ids == '' || ids == null || handle == ''){
            $.messager.alert('确认请求','请确认你发送了参数过来','error');
            return false;
        }
        var lock_time = 0;
        if(handle == 'lock'){
            lock_time = $('#input_lock_time').datetimebox('getValue');
        }

        var returnAjax = false;
        $.ajax({
            async:false,
            type: "GET",
            dataType: "json",
            contentType:"utf-8",
            cache:false,
            url:"/bulletin/index/handle",
            data: {ajax_print:'json_1',req_handle:handle,bulletin_id:ids,lock_time:lock_time},
            success: function(json) {
                if (json.stat == 1) {
                    $.messager.alert('确认请求',json.msgs);
                    $('#datagrid_result').datagrid('reload');//重新载入
                    returnAjax = true;
                }else{
                    $.messager.alert('请求结果',json.msgs,'error');
                }
            },
            beforeSend:function(){
                forbiddenPage();
            },
            error: function() {
                $.messager.alert('警告','你并没有进行当前操作的权限！','error');
            },
            complete:function(){
                releasePage();
            }
        });

        return returnAjax;
    }
